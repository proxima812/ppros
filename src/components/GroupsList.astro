---
import { supabase } from "../supabaseClient"
import GroupCard from "./GroupCard.astro"

const { data, error } = await supabase.from("groups").select("*")
let groups = data
let groupsError = error
---

<div className="container justify-center items-center px-5">
	<div class="w-full columns-1 md:columns-2 lg:columns-3 gap-5">
		{groupsError ? "Нет данных!" : groups.map(card => <GroupCard card={card} />)}
	</div>
</div>
