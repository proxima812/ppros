---
import LoadEffect from "./LoadEffect.astro"

const text_style = "text-lg text-stone-800"
---

<div class="w-full mx-auto flex items-center justify-center flex-col gap-6">
	<LoadEffect />

	<div
		class="flex gap-5 text-center flex-wrap justify-center items-center overflow-hidden"
		id="anim"
	>
		<span class={text_style}>🌐 Сообщества</span>
		<span class={text_style}>🎨 Форматы</span>
		<span class={text_style}>⏰ Время</span>
		<span class={text_style}>📝 Описания</span>
		<span class={text_style}>📞 Контакты</span>
		<span class={text_style}>🔗 Ссылки</span>
	</div>
	<script>
		import { animate, stagger } from "motion"

		animate(
			"#anim span",
			{
				opacity: [0, 1],
				y: ["30px", 0],
			},
			{ delay: stagger(0.3, { ease: "linear" }), duration: 0.8 },
		)
	</script>
</div>
